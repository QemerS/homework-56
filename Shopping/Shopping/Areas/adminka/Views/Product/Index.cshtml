@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/adminka/Views/Shared/_Layout.cshtml";
}
@using Shopping.Models

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a asp-area="adminka" asp-controller="product" asp-action="create" class="btn btn-primary">
                Create
            </a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Date</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td><img src="~/Uploads/@item.Image" style="max-width:150px; max-height:150px" /></td>
                            <td>@(item.Title.Length>15? item.Title.Substring(0,15)+"...": item.Title)</td>
                            <td>@item.Price</td>
                            <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm:ss")</td>
                            <td>
                                <a asp-area="adminka" asp-controller="product" asp-action="update" class="btn btn-success" asp-route-id="@item.Id">Update</a>
                                <a asp-area="adminka" asp-controller="product" asp-action="delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

